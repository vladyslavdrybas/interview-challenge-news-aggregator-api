                    "422": {
                        "$ref": "#/components/responses/422"
                    },
                    "404": {
                        "$ref": "#/components/responses/404"
                    }
                },
                "security": [
                    {
                        "bearerHttpAuthentication": {
                            "$ref": "#/components/securitySchemes/bearerHttpAuthentication"
                        }
                    }
                ]
            }
        },
        "/articles/{id}": {
            "get": {
                "tags": [
                    "Articles"
                ],
                "summary": "Retrieve a specific article by ID with all relationships",
                "operationId": "90f7485e28819211cd54fc2b866bd33c",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
